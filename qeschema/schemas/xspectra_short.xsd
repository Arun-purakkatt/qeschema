<?xml version="1.0" encoding="utf-8"?>
<!--
Source: https://github.com/QEF/q-e/blob/master/XSpectra/Doc/INPUT_XSPECTRA
Authors: Gianfranco Abrusci
-->
<schema xmlns="http://www.w3.org/2001/XMLSchema"
	xmlns:qes_xspectra="http://www.quantum-espresso.org/ns/qes/xspectra"
	targetNamespace="http://www.quantum-espresso.org/ns/qes/xspectra" version="20220120">
    <element name="xspectra" type="qes_xspectra:xspectra"/>
    <complexType name="input">
        <sequence>
            <element name="input_xspectra" type="qes_xspectra:input_xspectra"/>
            <element name="plot" type="qes_xspectra:plot"/>
            <element name="pseudos" type="qes_xspectra:pseudos"/>
            <element name="cut_occ" type="qes_xspectra:cut_occ"/>
            <element name="kpoints" type="qes_xspectra:kpoints"/>
        </sequence>
    </complexType>
    <complexType name="input_xspectra" type="qes_xspectra:input_xspectra">
        <annotation>
            <documentation>
            Short version of the input file for the XSpectra code. 
            </documentation>
        </annotation>
        <sequence>
            <element name="calculation" type="string"   minOccurs="1" maxOccurs="1"  default=""/>
            <element name="edge"        type="string"   minOccurs="0" maxOccurs="1"  default="K"/>
        </sequence>
    </complexType>

    <complextype name="plot">
        <sequence>
            <element name="xnepoint"    type="integer"  minoccurs="0" maxoccurs="1"  default="100"/>
        </sequence>
    </complextype>


    <complextype name="pseudos">
        <sequence>
            <element name="filecore"    type="string"   minoccurs="0" maxoccurs="1"  default="Core.wfc"/>
        </sequence>
    </complextype>

    <complextype name="cut_occ">
        <sequence>
            <element name="cut_ierror"   type="double"   minoccurs="0" maxoccurs="1"  default="1.d-7"/>
        </sequence>
    </complextype>
    <complexType name="kpoints">
        <sequence>
            <element name="tmp_kpoint" type="string" minOccurs="1" maxOccurs="1"/>
        </sequence>
    </complexType>

</schema>
